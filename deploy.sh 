#!/usr/bin/env bash

# Deploy script for the portfolio website
# This script builds and deploys the site to GitHub Pages

set -e  # Exit immediately if a command exits with a non-zero status

# Get the current branch
CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)

echo "ğŸš€ Starting deployment process from branch: $CURRENT_BRANCH"

# Make sure we're on the main branch
if [ "$CURRENT_BRANCH" != "main" ]; then
  echo "âš ï¸ Warning: You are not on the main branch. Continuing anyway..."
  read -p "Press Enter to continue or Ctrl+C to abort..." 
fi

# Check for uncommitted changes
if [ -n "$(git status --porcelain)" ]; then
  echo "âš ï¸ Warning: You have uncommitted changes."
  read -p "Press Enter to continue or Ctrl+C to abort..." 
fi

echo "ğŸ“¦ Installing dependencies..."
npm ci

echo "ğŸ”¨ Building project..."
npm run build

echo "ğŸ§ª Testing build output..."
if [ ! -d "dist" ]; then
  echo "âŒ Build failed: No dist directory found"
  exit 1
fi

echo "ğŸ“¤ Deploying to GitHub Pages..."
npm run deploy

echo "âœ… Deployment complete! Site should be live shortly at: https://jamesnjovu.github.io/jamesnjovu/"
echo "Note: It may take a few minutes for changes to propagate through GitHub's servers."